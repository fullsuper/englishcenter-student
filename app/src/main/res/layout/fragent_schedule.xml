        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></CalendarView>
    <ListView
        android:id="@+id/lvExamDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <!--Một số hoạt động gì đó vào đây-->
    </ListView>

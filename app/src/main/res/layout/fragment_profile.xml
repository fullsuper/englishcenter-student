<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@drawable/student"
        android:layout_margin="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ Sơ Sinh Viên"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/custom_shape1"
            android:layout_marginLeft="40dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="2dp"
            />
        <ImageButton
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/wrench1"
            android:background="@null"
            android:id="@+id/btnEdit"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:text="Sinh viên : "
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:paddingHorizontal="5dp"
            android:enabled="false"
            android:background="@null"
            android:text=""
            android:textSize="20dp"
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView

            android:text="Năm Sinh : "
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <EditText
            android:paddingHorizontal="5dp"
            android:enabled="false"
            android:maxLines="1"
            android:background="@null"
            android:id="@+id/tvDoB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="   "
            android:textSize="20dp">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp">
        <TextView
            android:text="Địa chỉ : "
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:paddingHorizontal="5dp"
            android:enabled="false"
            android:background="@null"
            android:text=""
            android:textSize="20dp"
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Văn Bằng : "
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
        <EditText

            android:enabled="false"
            android:maxLines="1"
            android:paddingHorizontal="5dp"
            android:background="@null"
            android:text="aaa"
            android:textSize="20dp"
            android:id="@+id/tvLiteracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="20dp"
        android:id="@+id/linearBtn">
        <Button
            android:id="@+id/btnOK"
            android:background="@drawable/custom_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/btnCancel"
            android:background="@drawable/custom_shape2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Hủy"
            android:layout_marginHorizontal="20dp"
            android:visibility="invisible"/>


    </LinearLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/imgMessage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:src="@mipmap/envelope" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/imgMessage"
        android:textSize="25dp"
        tools:text="Tiêu Đề" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_alignBottom="@+id/imgMessage"
        android:layout_alignStart="@+id/tvTitle"
        tools:text="Nội Dung Nội Dung Nội Dung Nội Dung Nội Dung Nội Nội Dung Nội Dung Nội Dung Nội Dung Nội Dung Nội Dung Nội Dung " />


</RelativeLayout>